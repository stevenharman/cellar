ol.matches
  li.match ng-repeat='match in matchReport.matches' class='{{match.confidence}}'

    .match-primary ng-if='match.isMatched'
      figure
        a ng-href='{{match.brew.links.self}}' title='{{match.brew.name}}'
          img src=image_path('no-label.png') ng-src='{{match.brew.links.mediumLabel}}' alt='{{match.brew.name}}'
      h4.brew
        a ng-href='{{match.brew.links.self}}' title='{{match.brew.name}}'
          | {{match.brew.name}}
        small.source-data= '({{match.source.brew}})'
      .breweries
        a ng-repeat='brewery in match.brew.breweries' ng-href='{{brewery.links.self}}'
          | {{brewery.name}}
        small.source-data= '({{match.source.brewery}})'

    .match-primary ng-if='!match.isMatched'
      figure
        span title='{{match.brew.name}}'
          img src=image_path('no-label.png') alt='{{match.brew.name}}'
      h4.brew
        .source-data= '{{match.source.brew}}'
      .breweries
        .source-data= '{{match.source.brewery}}'

    ul.match-details
      li.vintage
        label Vintage
        | {{match.vintage}}
      li.count
        label Count
        | {{match.count}}
      li.size
        label Size
        | {{match.size}}
        small.source-data= '({{match.source.size}})'
      li.notes
        | {{match.notes}}

    <span match-indicator match='match'></span>
