.profile.row-fluid
  .keeper-avatar.span2
    = profile.gravatar(128)
  .keeper.span10
    h2.username= profile.username
    dl.demographics
      - if profile.website
        dt
          i.icon-external-link
        dd.website= link_to(profile.website, profile.website)
      - if profile.location
        dt
          i.icon-map-marker
        dd.location= profile.location
      dt
        i.icon-time
      dd.joined
        = t('.joined_html', date: ldate(profile.joined, format: :month_day_year))
    .stats.row-fluid
      dl.beers.span3
        dt Beers
        dd
          span= profile.beers_count
          | Total
        dd
          span= profile.brews_count
          | Unique
      dl.breweries.span2
        dt Breweries
        dd
          span= profile.total_breweries
          | Total
      - if profile.bio
        dl.bio.span6
          dt Info
          dd= simple_format(profile.bio)

