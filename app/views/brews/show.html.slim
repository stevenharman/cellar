- content_for :title do
  = @brew.name

article.split-view.brew*{'data-id' => @brew.id}
  .split-view-main
    hgroup.brew-basics
      h1.name= @brew.name
      .brewery-name= render 'brews/breweries', brew: @brew

    .brew-info
      .brew-description
        = simple_format(@brew.description)

      ul.brew-details
        li.detail.style
          label Style
          = @brew.style_name
        li.detail.abv
          label ABV
          = @brew.abv
          | %
        li.detail.ibu
          label IBU
          = @brew.ibu
        li.detail.availability
          label Availability
          | Fake Thing

      = render 'cellars/stats', cellar: current_cellar, brew: @brew

    .beer-list
      = render 'cellars/beers_for_brew', brew: @brew, your_cellar: current_cellar

  .split-view-sidebar
    = link_to(new_stock_order_path(brew: @brew), class: 'add-to-cellar btn btn-primary') do
      span.icon-plus-sign
      |  Stock one now!
    = image_tag(@brew.medium_image || 'http://placehold.it/256x256', alt: @brew.name, class: 'brew-label')

    .similar-brews
      h6.similar-brews-legend= t('.similar-brews')
      ul.similar-brews-list
        li= link_to('Brew Name Here', '#')
        li= link_to('Brew Name Here In Case Longer', '#')
        li= link_to('Another Brew Name Here', '#')
