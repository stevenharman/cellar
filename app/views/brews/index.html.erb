<h1>Browse Beer</h1>

<fieldset class='beers-cellared'>
  <table class='table table-striped table-condensed'>
    <thead>
      <tr>
        <th>Brew</th>
        <th>Brewery</th>
        <th>Cellar It</th>
      </tr>
    </thead>
    <tbody>
      <% for brew in @brews %>
        <tr class='beer'>
          <td><%= link_to brew.name, brew %></td>
          <td><%= render partial: brew.breweries, spacer_template: 'breweries/brewery_spacer' %></td>
          <td>
            <%= link_to 'Cellar it!', new_stock_order_path(brew: brew), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>
<%= paginate @brews %>
