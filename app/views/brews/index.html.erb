<fieldset class="beers-stocked">
  <legend>Beers</legend>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Brew</th>
        <th>Brewery</th>
        <th>Cellar It</th>
      </tr>
    </thead>
    <tbody>
      <% for brew in @brews %>
        <tr class="beer">
          <td><%= link_to brew.name, brew %></td>
          <td><%= link_to brew.brewery.name, brew.brewery %></td>
          <td>
             <%= link_to 'Cellar it!', new_beer_path, class: 'btn' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>
<%= paginate @brews %>