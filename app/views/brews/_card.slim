article.brew.card*{'data-id' => brew.id}
  .content
    figure
      = link_to(brew, title: brew.name) do
        = image_tag(brew.medium_image || 'http://placehold.it/140x140', alt: brew.name)
    .specifics
      h3.name= link_to(brew.name, brew, title: brew.name)
      .breweries
        - for brewery in brew.breweries do
          = link_to(brewery.name, brewery, title: brewery.name, class: 'brewery')
          span.separator
            '  |
      ul.details
        li.style
          i.icon-beer
          = brew.style_name
        - if brew.abv.present?
          li.abv
            label= t('cellar.brew.abv')
            | #{brew.abv}%
        - if brew.ibu.present?
          li.ibu
            label= t('cellar.brew.ibu')
            = brew.ibu
  .footer
    ul.inventory
      li.actions
        = link_to(brew, title: t('.inventory.actions')) do
          i.icon-cog
      - unless your_cellar == this_cellar
        li.this-cellar-count
          = this_cellar.beers_count(brew)
          label= t('.inventory.this_cellar')
      - if your_cellar.active?
        li.your-cellar-count
          = your_cellar.beers_count(brew)
          label= t('.inventory.your_cellar')
      li.all-cellars-count
        = brew.cellared_beers_count
        label= t('.inventory.all_cellars')
