<fieldset class="beers-stocked">
  <legend>Beers</legend>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Brewery</th>
        <th>Cellar It</th>
      </tr>
    </thead>
    <tbody>
      <% for brewery in @breweries %>
        <tr class="beer">
          <td><%= link_to brewery.name, brewery %></td>
          <td>
             <%= link_to 'Cellar it!', new_beer_path, class: 'btn' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>
<%= paginate @breweries %>

<p>
  Don't see the brewery you were looking for? <%= link_to 'Add it now', new_brewery_path, class: 'btn' %>
</p>
