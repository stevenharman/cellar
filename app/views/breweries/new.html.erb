<div>
  <h1>Add a brewery</h1>

  <%= form_for @brewery, html: { class: "form-stacked" } do |f| %>
    <label>Name: <%= f.text_field :name, autofocus: true, class: 'span8' %></label>
    <label>Website: <%= f.text_field :url, class: 'span8' %></label>
    <%= f.submit "Add it!", id: 'add_brewery', class: 'btn btn-primary' %>
  <% end %>
</div>
